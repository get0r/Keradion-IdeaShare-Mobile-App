<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="geez.jdevs.keradion">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.WriteActivity"/>
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.UserProfileViewerActivity"/>
        <activity android:name=".activities.ViewStoryActivity"/>
        <activity android:name=".activities.SearchActivity"/>
        <activity android:name=".activities.SavedStoriesActivity"/>

    </application>

</manifest>